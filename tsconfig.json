{
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "lib": [
      "es2017",
      "dom",
      "esnext"
    ],
    "moduleResolution": "node",
    "sourceMap": true,
    "preserveConstEnums": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "alwaysStrict": false,
    "strictNullChecks": true,
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "@": [ "./" ],
      "@pages": [ "pages" ],
      "@types": [ "types" ],
      "@block": [ "utils/Block" ],
      "@services": [ "services" ],
      "@render": [ "utils/Render" ],
      "@components": [ "components" ],
      "@button": [ "components/Button" ],
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "webpack.config.js"
  ]
}
