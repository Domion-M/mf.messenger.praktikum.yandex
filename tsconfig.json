{
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "lib": [
      "es2017",
      "dom",
      "esnext"
    ],
    "moduleResolution": "node",
    "sourceMap": true,
    "preserveConstEnums": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "alwaysStrict": false,
    "strictNullChecks": true,
    "outDir": "dist"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "webpack.config.js"
  ]
}